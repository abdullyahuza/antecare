<div class="padding">
    <div class="container justify-content-center">
        <div class="card card-bordered">
            <div class="card-header">
                {{> guest/chaticon}}
                <text id='guest'>{{guest.firstName }}</text>
                <text id='pid' hidden>{{guest.pid }}</text>
                <a href='/' style="margin-right:-10px;" class="btn btn-xs btn-bg" data-abc="true">
                    Antenatal Care Respondant
                </a>
            </div>
            <div class="ps-container ps-theme-default ps-active-y" id="dialogue">
                <!--Chat body  -->
                <div class="ps-scrollbar-x-rail" style="left: 0px; bottom: 0px;">
                    <div class="ps-scrollbar-x" tabindex="0" style="left: 0px; width: 0px;"></div>
                </div>
                <div class="ps-scrollbar-y-rail" style="top: 0px; height: 0px; right: 2px;">
                    <div class="ps-scrollbar-y" tabindex="0" style="top: 0px; height: 2px;"></div>
                </div>
            </div>
            <form class="publisher bt-1 border-light" onSubmit="return chatbot.sendMessage()"> 
                <input class="publisher-input" type="text" placeholder="Write something" id="message" autocomplete="off" disabled placeholder="Please wait... loading..."> 
                    <button type="submit" class="publisher-btn text-info" ><i class="fa fa-paper-plane"></i></button>
            </form>
        </div>
    </div>
</div>
{{> guest/scripts}}